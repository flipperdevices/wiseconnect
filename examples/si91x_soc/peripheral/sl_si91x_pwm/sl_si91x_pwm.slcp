project_name: sl_si91x_pwm
package: platform_siwx91x_app
description: 'This application demonstrates how to configure PWM peripheral.

  '
category: example|peripheral
quality: production
label: SI91x - SL_PWM
component:
- id: sl_main
- id: status
- id: syscalls
- id: si91x_memory_default_config
- id: pwm_instance
  instance:
  - channel_0
- id: sl_pwm
source:
- path: app.c
- path: pwm_example.c
include:
- path: .
  file_list:
  - path: app.h
  - path: pwm_example.h
toolchain_settings:
- option: gcc_compiler_option
