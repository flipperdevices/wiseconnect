- path: app.c
- path: ble_app.c
- path: wifi_app.c
- path: sensor_app.c
- path: sensors/humidity_sensor.c
- path: sensors/light_sensor.c
- path: sensors/motion_sensor.c
- path: sensors/rgb_led.c
